
<div style="background: rgb(48, 45, 45)">
  <h2 style="text-align: center; color:white; font-weight:600; padding-top: 20px">Sign Up to View Games</h2>
  <form style="padding: 15px" class="form signup-form">
    <div class="form-group">
      <label style=" color:limegreen" for="username-signup">Username:</label>
      <input class="form-input" type="text" id="username-signup" />
    </div>
    <div class="form-group">
      <label style=" color:limegreen" for="email-signup">Email:</label>
      <input class="form-input" type="text" id="email-signup" />
    </div>
    <div class="form-group">
      <label style=" color:limegreen" for="password-signup">Password:</label>
      <input class="form-input" type="password" id="password-signup" />
    </div>
    <div class="form-group">
     <button class="btn btn-primary" type="submit">Submit</button>
    </div>
  </form>
</div>

<script src="./js/signup.js"></script>
