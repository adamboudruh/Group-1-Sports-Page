<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Winning Edge</title>
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/css/jass.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
    />
  </head>

  <body>
    <div class="header">
      <div class="text-center">
        <div class="row justify-content-center">
          <img src="/images/logo.png" alt="group logo" />
        </div>

      </div>

      {{#if logged_in}}
        {{! If logged in, displays logout button in the nav bar for user to click }}
        <nav>
          <button class="btn" id="logout">logout</button>
        </nav>
      {{/if}}
    </div>

    <main class="container container-fluid mt-5">
      {{{body}}}
    </main>
    <footer>

    </footer>

    {{#if logged_in}}
      {{! Imports the logout js file to allow the user to log out if they're logged in, makes the button work}}
      <script src="../../public/js/logout.js"></script>
    {{/if}}
  </body>

</html>